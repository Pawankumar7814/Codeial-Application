<link rel="stylesheet" href="../css/home.css">
<h1>Home Page</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user) { %>
        <form action="/posts/add-new-post" method="post" id="new-post-form">
            <textarea name="content" id="" cols="30" rows="3" placeholder="post..."></textarea>
            <button type="submit">Post</button>
        </form>
        <% } %>
            <div id="post-list-container">
                <ul>
                    <% for(post of posts) { %>
                        <li>
                            <%= post.content %>
                                <p>
                                    <small>
                                Post by: <%= post.user.name %>
                            </small>
                                </p>
                        </li>
                        <% } %>
                </ul>
            </div>
</section>