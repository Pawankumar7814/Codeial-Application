<link rel="stylesheet" href="/css/user.css">
<h1>Profile Page</h1>


<% if(user.id == profile_user.id) { %>
    <!-- If the user is loged in then show the form -->
    <form action="/users/update/<%= profile_user.id %>" method="post">
        <input type="hidden" name="user_id" value="<%= profile_user.id %>">
        <input type="text" name="name" id="" placeholder="Your name" value="<%= profile_user.name %>" required>
        <input type="email" name="email" id="" placeholder="Your email" value="<%= profile_user.email %>" required>
        <button type="submit">Submit</button>
    </form>

    <% }else{ %>
        <!-- If user is not loged in -->
        <p>
            name:
            <%= profile_user.name %>
        </p>
        <p>
            email:
            <%= profile_user.email %>
        </p>
        <% } %>